<Defs>
  <ThingDef ParentName="DankPyon_ArtableBedBase">
    <defName>BS_Giant_RoyalTudorBed</defName>
    <label>giant royal tudor bed</label>
    <description>A luxurious gold-inlaid bed fit for the highborn. Very comfy and beautiful, it is a work of art in itself. Fits two.</description>
    <graphicData>
      <texPath>Things/Building/Furniture/RoyalTudorBed</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(6.026,6.026)</drawSize>
      <damageData>
        <rect>(0,0.05,3,2.90)</rect>
      </damageData>
    </graphicData>
    <interactionCellOffset>(2,2,2)</interactionCellOffset>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>DankPyon_RoyalEndTable</li>
          <li>DankPyon_RoyalDresser</li>
          <li>DankPyon_RoyalCloset</li>
        </linkableFacilities>
      </li>
      <li Class="BigAndSmall.CompProperties_Bed">
        <sleepingSlotCount>2</sleepingSlotCount>
      </li>
    </comps>

    <statBases>
      <MaxHitPoints>220</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <WorkToBuild>90000</WorkToBuild>
      <Mass>200</Mass>
      <Beauty>150</Beauty>
      <BedRestEffectiveness>1.15</BedRestEffectiveness>
      <Comfort>0.95</Comfort>
      <ImmunityGainSpeedFactor>1.07</ImmunityGainSpeedFactor>
      <SurgerySuccessChanceFactor>1</SurgerySuccessChanceFactor>
    </statBases>

    <size>(3,3)</size>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>235</costStuffCount>
    <costList>
      <Gold>110</Gold>
    </costList>

    <building>
      <bed_pawnDrawOffset>0.40</bed_pawnDrawOffset>
      <bed_maxBodySize>9999</bed_maxBodySize>

      <bed_showSleeperBody>False</bed_showSleeperBody>
      <bed_healPerDay></bed_healPerDay>
    </building>

    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <fillPercent>0.5</fillPercent>
    <pathCost>42</pathCost>
    <leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
    <staticSunShadowHeight>0.17</staticSunShadowHeight>
    <castEdgeShadows>True</castEdgeShadows>
    <designationHotKey>Misc4</designationHotKey>
    <techLevel>Medieval</techLevel>
    <constructionSkillPrerequisite>9</constructionSkillPrerequisite>
    <uiIconScale>0.75</uiIconScale>

    <researchPrerequisites>
      <li>DankPyon_RoyalRusticFurniture</li>
    </researchPrerequisites>
    <designationCategory>BS_Furniture</designationCategory>
  </ThingDef>


